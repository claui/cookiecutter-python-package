{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {%- if cookiecutter.use_fire == "y" %}
    {
      "label": "{{ cookiecutter.project_title }}: Show usage help",
      "type": "shell",
      "command": "pipenv",
      "args": [
        "run",
        "cli"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "clear": true,
        "showReuseMessage": false
      }
    },
    {%- endif %}
    {
      "label": "{{ cookiecutter.project_title }}: Run hello",
      "type": "shell",
      "command": "pipenv",
      "args": [
        "run",
        "cli"
        {%- if cookiecutter.use_fire == "y" %},
        "hello"
        {%- endif %}
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "{{ cookiecutter.project_title }}: Run hello '{{ cookiecutter.author_full_name }}'",
      "type": "shell",
      "command": "pipenv",
      "args": [
        "run",
        {%- if cookiecutter.use_fire == "y" %}
        "cli",
        "hello",
        "{{ cookiecutter.author_full_name }}"
        {%- else %}
        "python",
        "-c",
        "import {{ cookiecutter.project_slug }}; print({{ cookiecutter.project_slug }}.hello(\"{{ cookiecutter.author_full_name }}\"))"
        {%- endif %}
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "clear": true,
        "showReuseMessage": false
      }
    }
  ]
}
