{
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    // Built-in formatter disrespects insert_final_newline in .editorconfig
    "editor.formatOnSave": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "editor.formatOnSave": true,
  "files.associations": {
    "**/?? cookiecutter.project_slug ??/**/*.json": "jinja-json",
    "**/?? cookiecutter.project_slug ??/.vscode/*.json": "jsonc",
    "**/?? cookiecutter.project_slug ??/.python-version": "jinja",
    "**/?? cookiecutter.project_slug ??/**/*.md": "jinja-md",
    "**/?? cookiecutter.project_slug ??/**/*.py": "jinja-py",
    "**/?? cookiecutter.project_slug ??/**/*.toml": "jinja-toml",
    "**/?? cookiecutter.project_slug ??/**/*.yml": "jinja-yaml",
    "**/?? cookiecutter.project_slug ??/**/PKGBUILD": "jinja-shell",
    "**/hooks/*_gen_project.py": "jinja-py"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/__pycache__": true
  },
  "pylint.args": [
    "--enable-all-extensions"
  ],
  "pylint.path": [
    "${workspaceFolder}/.venv/bin/pylint"
  ],
  "pylint.severity": {
    "refactor": "Warning"
  },
  "markdownlint.config": {
    "MD033": false
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
}
